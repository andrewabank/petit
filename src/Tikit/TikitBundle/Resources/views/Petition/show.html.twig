        $('#source-button').click(function (e) {
            $('#basic-modal-content').modal();
            var sendInfo = {
                petition_id: $('#petition_id').text(),
                user_id: $('#user_id').text()
            };
            $.ajax({
                type: "POST",
                url: 'http://petit/app_dev.php/votepetition',
