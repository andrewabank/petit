{% extends "TikitTikitBundle::layout_boots.html.twig" %}

{% block title "Symfony - Tikits" %}

{% block javascripts %}
    <script src="{{ asset('/js/jquery.min.js') }}"></script>
    <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/js/bootswatch.js') }}"></script>
    <script src="{{ asset('js/petition/petition.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
        <tbody>
            {%for petition in petitions%}
                    <a class="title loggedin" href="{{ path('petition_show', {'url': petition.0.petitionUrl}) }}" tabindex="1"><h2 id="type-blockquotes">{{petition.0.petitionTitle}}</h2></a>
                    <div class="entry unvoted">
                    <p class="title">
                    <a class="title loggedin" href="{{petition.0.petitionUrl}}" tabindex="1">{{petition.0.petitionTitle}}</a>
                    <span class="domain">(<a href="/domain/i.imgur.com/">i.imgur.com</a>)</span></p><span>{{petition.0.score}}</span>
                    <p class="tagline">поступило <time title="Sun Nov 3 09:19:06 2013 UTC" datetime="2013-11-03T09:19:06+00:00">{{petition.0.dateAdded|date('Y-m-d H:i:s')}}</time> <a href="http://ru.reddit.com/user/jkjkjij22" class="author id-t2_6sczy">{{petition.username}}</a>
                    <span class="userattrs"></span> в <a href="http://ru.reddit.com/r/pics/" class="subreddit hover">pics</a>
                    </p><ul class="flat-list buttons">
                </div>
            {%endfor%}
        </tbody>
        {% if app.user %}
            <input type="hidden" name="user_id" id="user_id" value="{{ app.user.id }}">
        {% else %}
        {% endif %}
        <div class="span4">
            {%if total_pages > 0%}
                <div class="pagination">
                    {%for i in 1..total_pages%}
                    <ul>
                        {%if loop.first%}
                            <li class="prev {%if current_page==1%} disabled{%endif%}"><a href="#"><-Previous</a></li>
                        {%endif%}
                        <li {%if current_page==loop.index%}class="active"{%endif%}><a href="">{{loop.index}}</a></li>
                        {%if loop.last%}
                            <li class="next {%if current_page==total_pages%} disabled{%endif%}"><a href="#">Next-></a></li>
                        {%endif%}
                    </ul>
                    {%endfor%}
                </div>
            {%endif%}
        </div>
{% endblock %}
